{
  "name": "feaws-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Cross-Chain Yield-Gated TWAP",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "deploy:local": "npx hardhat run scripts/deploy-local.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy-sepolia.js --network sepolia",
    "deploy:etherlink": "npx hardhat run scripts/deploy-etherlink.js --network etherlink",
    "verify:sepolia": "npx hardhat verify --network sepolia",
    "verify:etherlink": "npx hardhat verify --network etherlink",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.6",
    "dotenv": "^16.3.1"
  }
}
